{
  "name": "@jtsang/memos-mcp",
  "version": "0.1.1",
  "private": false,
  "description": "MCP wrapper for memos-mcp",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "memos-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bunx rimraf dist && bun build src/index.ts --outdir dist --target node --format esm && echo '#!/usr/bin/env node' | cat - dist/index.js > dist/tmp && mv dist/tmp dist/index.js && chmod +x dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "memos",
    "mcp",
    "notes",
    "cli"
  ],
  "author": "jtsang4",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtsang4/memos-mcp.git",
    "directory": "js"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.2.22",
    "@types/node": "^24.10.1",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  }
}
